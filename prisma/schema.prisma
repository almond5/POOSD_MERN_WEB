generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String   @id @default(cuid())
  name        String
  phoneNumber String
  email       String   @unique
  password    String
  profile     Profile?

  @@index([id])
}

model Profile {
  id          String     @id @default(cuid())
  description String     @db.Text
  locationId  String?    @unique
  location    Location?
  species     String     @db.Text
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String     @unique
  interests   Interest[]
  images      Image[] // New relation for images

  @@index([id])
  @@index([userId])
}

model Interest {
  id                  String   @id @default(cuid())
  profileId           String?
  profile             Profile? @relation(fields: [profileId], references: [id])
  interestedProfileId String?
  isMatch             Boolean

  @@index([id])
  @@index([profileId])
}

model Location {
  id        String   @id @default(cuid())
  name      String   @db.Text
  latitude  Float
  longitude Float
  profileId String   @unique
  profile   Profile? @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([id])
}

model Image {
  id        String  @id @default(cuid())
  publicId  String  @unique
  format    String
  version   String
  profile   Profile @relation(fields: [profileId], references: [id],  onDelete: Cascade)
  profileId String  @unique

  @@index([id])
  @@index([profileId])
}
